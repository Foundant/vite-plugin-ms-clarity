{
  "name": "vite-plugin-ms-clarity",
  "version": "1.0.0",
  "description": "Vite plugin for Microsoft Clarity.",
  "keywords": [
    "clarity",
    "vite-plugin"
  ],
  "files": [
    "dist",
    "plugin.ts",
    "README.md"
  ],
  "type": "module",
  "main": "./dist/plugin.js",
  "types": "./dist/plugin.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/plugin.d.ts",
        "default": "./dist/plugin.js"
      },
      "require": {
        "types": "./dist/plugin.d.cts",
        "default": "./dist/plugin.cjs"
      }
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "author": "_Kerman",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Foundant/vite-plugin-ms-clarity"
  },
  "readme": "https://github.com/Foundant/vite-plugin-ms-clarity#readme",
  "bugs": "https://github.com/Foundant/vite-plugin-ms-clarity/issues",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "vite": "^4 || ^5 || ^6"
  }
}
